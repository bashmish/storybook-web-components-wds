{
  // TODO: as close as possible to the ones generated by https://github.com/modernweb-dev/web/blob/master/scripts/generate-ts-configs.mjs to be able to move to that monorepo in the future
  "extends": "./tsconfig.node-base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["dist", "types"]
}
